    },
    {
      "id": "test-009",
      "name": "Status bar displays",
      "description": "Verify status bar shows connection status and mode",
      "steps": [
        {
          "action": "navigate",
          "url": "/web-ui/index.html"
        },
        {
          "action": "waitForElement",
          "selector": "#connection-status",
          "timeout": 2000
        },
        {
          "action": "assertVisible",
          "selector": "#connection-status"
        },
        {
          "action": "assertVisible",
          "selector": "#current-mode"
        }
      ]
    },
    {
      "id": "test-010",
      "name": "Responsive design works",
      "description": "Verify UI is responsive on mobile viewport",
      "steps": [
        {
          "action": "navigate",
          "url": "/web-ui/index.html"
        },
        {
          "action": "setViewport",
          "width": 375,
          "height": 667
        },
        {
          "action": "waitForElement",
          "selector": "body",
          "timeout": 2000
        },
        {
          "action": "assertVisible",
          "selector": ".container"
        }
      ]
    }
  ],
  "browser": {
    "headless": true,
    "viewport": {
      "width": 1920,
      "height": 1080
    }
  },
  "timeouts": {
    "navigation": 10000,
    "element": 5000,
    "action": 3000
  }
}

